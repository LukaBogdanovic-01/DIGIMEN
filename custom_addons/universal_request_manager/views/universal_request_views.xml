<odoo>
    <record id="view_universal_request_form" model="ir.ui.view">
        <field name="name">universal.request.form</field>
        <field name="model">universal.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <div style="text-align: right; margin-bottom: 10px;">
                        <field name="status" widget="statusbar" options="{'clickable': True}"/>
                    </div>

                    <header>
                        <!-- Odobri (dok je Kreiran) -->
                        <button name="action_approve" type="object" string="Odobri" class="btn-success"
                            modifiers="{'invisible': [['|', ['status', '!=', 'draft'], ['id', '=', False]]]}"
                            groups="universal_request_manager.group_manager,universal_request_manager.group_director"/>

                        <!-- Završi (dok je Odobren) -->
                        <button name="action_done" type="object" string="Završi" class="btn-secondary"
                            modifiers="{'invisible': [['|', ['status', '!=', 'approved'], ['id', '=', False]]]}"
                            groups="universal_request_manager.group_director"/>

                        <!-- Odbij (dok nije završen ili već odbijen) -->
                        <button name="action_reject" type="object" string="Odbij" class="btn-danger"
                            modifiers="{'invisible': [['|', ['status', 'in', ['done', 'rejected']], ['id', '=', False]]]}"
                            groups="universal_request_manager.group_director"/>
                    </header>

                    <group>
                        <field name="name"/>
                        <field name="request_type_id" options="{'no_create': True}" context="{'show_clear': True}"/>
                        

                        <!-- Ako NIJE izabran šablon -->
                        <field name="description"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/>
                        <field name="priority"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/>
                        <field name="deadline"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/>
                        <field name="proces"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/>
                        <field name="assigned_user_id"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/>
                        <field name="project_id"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/>
                        <field name="tag_ids" widget="many2many_tags"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/>
                        <!-- <field name="document_ids" widget="many2many_tags"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/> -->
                        <field name="goals_id"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/>
                        <field name="attachment_file" filename="attachment_filename"
                            modifiers="{'invisible': [['request_type_id', '!=', False]]}"/>

                        <!-- Ako JESTE izabran šablon -->
                        <field name="template_description" readonly="0"
                            modifiers="{'invisible': [['request_type_id', '=', False]]}"/>
                        <field name="template_priority" readonly="1"
                            modifiers="{'invisible': [['request_type_id', '=', False]]}"/>
                        <field name="template_assigned_user" readonly="1"
                            modifiers="{'invisible': [['request_type_id', '=', False]]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_universal_request_tree" model="ir.ui.view">
        <field name="name">universal.request.tree</field>
        <field name="model">universal.request</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="status"/>
                <field name="priority"/>
                <field name="deadline"/>
                <field name="assigned_user_id"/>
                <field name="project_id"/>
                <field name="tag_ids"/>
            </list>
        </field>
    </record>

    <record id="view_universal_request_kanban" model="ir.ui.view">
        <field name="name">universal.request.kanban</field>
        <field name="model">universal.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="priority"/>
                <field name="status" fold="archived"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-att-class="'oe_kanban_card oe_kanban_global_click priority_' + record.priority.raw_value">
                            <div class="o_kanban_primary_left">
                                <strong><field name="name"/></strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_universal_request_search" model="ir.ui.view">
        <field name="name">universal.request.search</field>
        <field name="model">universal.request</field>
        <field name="arch" type="xml">
            <search string="Pretraga zahtjeva">
                <field name="name"/>
                <field name="tag_ids"/>
                <field name="description_text" string="Opis"/>
            </search>
        </field>
    </record>

    <record id="action_universal_request" model="ir.actions.act_window">
        <field name="name">Zahtjevi</field>
        <field name="res_model">universal.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_universal_request_search"/>
    </record>
</odoo>
